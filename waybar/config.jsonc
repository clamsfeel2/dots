// vim:set ft=jsonc:
{
		"layer": "top",
		"modules-left": ["hyprland/workspaces", "hyprland/window"],
		"modules-center": ["clock"],
		"modules-right": ["custom/scratchpad-indicator", "tray", "cpu", "temperature", "memory", "network", "pulseaudio", "bluetooth", "backlight", "battery"],
  // Modules configuration

  "custom/scratchpad-indicator": {
    "interval": 3,
    "return-type": "json",
    "exec": "swaymsg -t get_tree | jq --unbuffered --compact-output '(recurse(.nodes[]) | select(.name == \"__i3_scratch\") | .focus) as $scratch_ids | [..  | (.nodes? + .floating_nodes?) // empty | .[] | select(.id |IN($scratch_ids[]))] as $scratch_nodes | if ($scratch_nodes|length) > 0 then { text: \"\\($scratch_nodes | length)\", tooltip: $scratch_nodes | map(\"\\(.app_id // .window_properties.class) (\\(.id)): \\(.name)\") | join(\"\\n\") } else empty end'",
    "format": "{} üóó",
    "on-click": "exec swaymsg 'scratchpad show'",
    "on-click-right": "exec swaymsg 'move scratchpad'"
},
  "custom/arch-pill": {
		  "format": "ÔåÉ",
		  "on-click": "~/.config/rofi/scripts/power-menu",
		  "tooltip": false
  },
  "hyprland/window": {
	    "format": "{title}",
 		"max-length": 333,
	    "seperate-outputs": true
  },
  "clock": {
	"format": "<span foreground='#cba6f7'>ÔÄó </span><span>{:%H:%M %a %d}</span>",
	"tooltip": true,
	"interval": 1,
	"tooltip-format": "{calendar}",
	  "calendar": {
		"mode"          : "month",
		"mode-mon-col"  : 3,
		"on-scroll"     : 1,
		"on-click-right": "mode",
		"format": {
		  "months":     "<span color='#ffead3'><b>{}</b></span>",
		  "days":       "<span color='#ecc6d9'><b>{}</b></span>",
		  "weeks":      "<span color='#99ffdd'><b>{%W}</b></span>",
		  "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
		  "today":      "<span color='#ff6699'><b>{}</b></span>"
			  }
		  },
   "actions": {
	 "on-click-middle": "mode",
	 "on-click-right": "shift_up",
		"on-click": "shift_down"	   
   }
	/*"format-alt": "<span foreground='#89dceb'>ÔÄó </span><span>{:%H:%M}</span>"*/
},
  "cpu": {
		  "format": "<span foreground='#89b4fa'>Û∞Ø≥</span> {usage}%"
  },
  "memory": {
		  "format": "<span foreground='#81ad79'>Û∞çõ</span> {}%",
		  "on-click": "exec btop",
		  "interval": 1
  },

  "custom/gpu-util": {
		  "exec": "~/.config/waybar/scripts/gpu-util",
 		  "format": "<span foreground='#b19cd9'>Û∞Øø</span> {}",
		  "interval": 1
  },
"custom/gpu-temp": {
		  "exec": "~/.config/waybar/scripts/gpu-temp",
 		  "format": "<span foreground='#eba0ac'>Ôãâ</span> {}",
		  "interval": 1
  },

  "temperature": {
		  "hwmon-path": "/sys/class/hwmon/hwmon1/temp1_input",
		  "critical-threshold": 80,
		  "format": "<span foreground='#eba0ac'>Ôãâ</span> {temperatureC}¬∞C",
		  "interval": 1
  },
  "backlight": {
		  "device": "intel_backlight",
		  "format": "<span foreground='#f9e2af'>{icon}</span>  {percent}%",
		  "states": [0, 25, 50, 100],
		  "format-icons": ["ÔÜÖ","Û∞Éù", "Û∞Éü", "ÔÑë"],
		  "tooltip-format": "{percent}%",
		  "tooltip": true
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
        "default": "Ó©±",
        "urgent": "Ó©±",
        "active": "Û±ìª",
		"empty": "Ó™º",
		"special": "Û∞ñ∞"
        // "1": "Ó©±",
        // "2": "Ó©±",
        // "3": "Ó©±",
        // "4": "Ó©±",
        // "5": "Ó©±"
    },
	"persistent-workspaces": {
		"*": 5
	},
	"sort-by-number": true,
	"on-click": "activate",
	"all-outputs": false,
	"show-special": true
},

  "battery": {
		  "format": "<span>{icon}</span>  {capacity}%",
		  "format-critical": "<span foreground='#F38BA8'>{icon}</span>  {capacity}%",
		  "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
		  "format-time": "{H}h{M}m",
		  "format-charging": "<span foreground='#a6e3a1'>{icon}</span> <span foreground='#a6e3a1'>ÔÉß</span> {capacity}% | {power} W",
		  "format-full": "<span foreground='#a6e3a1'>{icon}</span> <span foreground='#a6e3a1'>ÔÉß</span> Charged",
		  "interval": 1,
		  "states": {
				  "critical": 30
		  },
		  "tooltip": true,
		  "on-click": "exec dunstctl history-pop",
		  "on-click-right": "~/.config/rofi/scripts/clearclip"
  },

   "network": {
		  "format": "Û∞§≠ Off",
		  "format-wifi": "{essid} ({signalStrength}%)",
		  "format-ethernet": "<span foreground='#b48ead'>Û∞àÄ</span>",
		  "format-disconnected": "Û∞§≠ Disconnected",
		  "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
		  "tooltip-format-wifi": "{essid}({signalStrength}%) Ôá´ ",
		  "tooltip-format-ethernet": "Û∞àÄ {ifname}",
		  "tooltip-format-disconnected": "Disconnected",
		  "on-click": "~/.config/rofi/scripts/rofi-wifi-menu",
		  "on-click-right": "~/.config/rofi/scripts/rofi-wifi-menu",
		  "on-click-middle": "~/.config/rofi/scripts/rofi-wifi-menu"
  },
  "pulseaudio": {
	"format": "<span foreground='#fab387'>{icon}</span> {volume}%  {format_source}",
	"format-bluetooth": "<span foreground='#fab387'>{icon}</span> {volume}%  {format_source}",
	"format-bluetooth-muted": "<span foreground='#F38BA8'>Û∞ñÅ</span>  {format_source}",
	"format-muted": "<span foreground='#F38BA8'>Û∞ñÅ</span>  {format_source}",
	"format-source": "<span foreground='#fab387'>ÔÑ∞</span> {volume}%",
	"format-source-muted": "<span foreground='#F38BA8'>ÔÑ±</span>",
	"format-icons": {
	  "headphone": "ÔÄ•",
	  "phone": "ÔÇï",
	  "portable": "ÔÇï",
	  "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
	},
	"on-click-middle": "pavucontrol",
	"on-click-right": "pavucontrol",
	"on-click-left": "pavucontrol",
	"input": true

  },
  "custom/playerctl": {
		  "format": "{icon}  <span>{}</span>",
		  "return-type": "json",
		  "max-length": 333,
		  "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} ~ {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
		  "on-click-middle": "playerctl play-pause",
		  "on-click": "playerctl previous",
		  "on-click-right": "playerctl next",
		  "format-icons": {
				  "Playing": "<span foreground='#94e2d5'>ÔÅã</span>",
				  "Paused": "<span foreground='#f38ba8'>ÔÅå</span>"
		  }
  },
  "tray": {
		  "format": "{icon}",
		  "icon-size": 14,
		  "spacing": 5
  },
  "bluetooth": {
		  "on-click": "~/.config/waybar/scripts/bluetooth-control",
		  "on-click-right": "~/.config/waybar/scripts/rofi-bluetooth",
		  "on-click-middle": "overskride",
		  "format": "{icon}",
		  "interval": 15,
		  "format-icons": {
				  "on": "<span foreground='#88C0D0'>Ôäî</span>",
				  "off": "<span foreground='#F38BA8'>Û∞Ç≤</span>",
				  "disabled": "Û∞Ç≤",
				  "connected": "Ôäì"
		  },
		  "tooltip-format": "{device_alias} {status}"
  },
  "custom/cliphist": {
		  "on-click": "~/.config/waybar/scripts/clipboard-rofi",
		  "on-click-middle": "~/.config/waybar/scripts/cliphist-wipe",
		  "format": "Û∞Öá",
		  "tooltip": false

  }
}
